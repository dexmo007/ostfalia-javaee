<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- NOTE: EditTextPreference accepts EditText attributes. -->
    <!-- NOTE: EditTextPreference's summary should be set to its value by the activity code. -->
    <EditTextPreference
        android:key="pref_serverurl"
        android:title="ServerURL"
        android:defaultValue="ec2-52-34-229-226.us-west-2.compute.amazonaws.com:28080/ServerProject"
        android:selectAllOnFocus="true"
        android:inputType="textCapWords"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1" />

    <SwitchPreference
        android:key="pref_mock_bt"
        android:title="Mock Bluetooth"
        android:summary=""
        android:defaultValue="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <SwitchPreference
        android:key="pref_mock_server"
        android:title="Mock Server"
        android:summary=""
        android:defaultValue="false"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</PreferenceScreen>
